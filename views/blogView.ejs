<!-- /////////////////////////////////////// HEADER ///////////////////////////////////////////////// -->
<%- include("./header.ejs") %>

<!-- //////////////////////////////////////// MAIN ////////////////////////////////////////////////// -->
<main class="container">
  <h1 class="display-4 headline-quote"><%= blog.title %></h1>
  <p><i class="far fa-calendar-alt"></i>&ensp;<%= blog.createdAt.toString().substring(4, 15) %></p>
  <div class="card content-view">
    <div class="card-body">
      <p><%= blog.content %></p>
    </div>
  </div>
  <div class="footer-button">
    <form action="/edit/<%= blog._id %>" method="GET">
      <button class="btn action-button" type="submit">Edit</button>
    </form>
    <!-- Button trigger modal -->
    <button type="button" class="btn action-button" data-toggle="modal" data-target="#deleteModal">
      Delete
    </button>
  </div>
</main>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="deleteModalLabel">Are you sure you want to delete this blog?</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-footer">

      <form action="/blog/<%= blog._id %>?_method=DELETE" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn action-button">Delete</button>
      </form>
      <button type="button" class="btn action-button" data-dismiss="modal">Cancel</button>
    </div>
  </div>
</div>
</div>


<!-- /////////////////////////////////////// FOOTER ///////////////////////////////////////////////// -->

<%- include("./footer.ejs") %>